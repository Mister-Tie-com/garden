{% extends 'base.html.twig' %}

{% block title %}Users Management{% endblock %}

{% block body %}
    <div class="user-management">
        <h1>Users Management</h1>
        <hr>
        <a href="{{ path('admin_user_add') }}" class="btn btn-success mb-3">Add New User</a>
        <hr>
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>
                        <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-primary">Edit</a>
                        {% if user.roles|join(', ') != 'ROLE_ADMIN' %}
                        <a href="{{ path('admin_user_delete', {id: user.id}) }}" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr>
        <a href="{{ path('login') }}" class="btn btn-success mb-3">Back to menu</a>
    </div>
{% endblock %}
